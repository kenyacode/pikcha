<div class="container-fluid content-body">
	<div class="row">
		<div class="form-group col-md-4 col-md-offset-4 text-center">
			<h1 class="col-md-4 col-md-offset-4">Sign up</h1>
			<%= form_for(@user, :html => {:multipart => true}) do |f| %>
			<div>
				<%= f.text_field :first_name, placeholder: "first name",class: "form-control" %>
			</div>
			<div>
				<%= f.text_field :last_name, placeholder: "last name", class: "form-control" %>
			</div>
			<div>
				<%= f.text_field :email, placeholder: "email", class: "form-control" %> <%= @user.errors.messages[:email].join(", ") %>
			</div>
			<div>
				<%= f.password_field :password, placeholder: "password", class: "form-control" %>
			</div>
			<div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    	</div>
			<div>
				<%= f.file_field :image %>
				<%= f.submit "Create a new user!", class: "btn btn-primary button-blue" %>
			</div>
			<div class="col-md-4">
		    <% @user.errors.full_messages.each do |msg| %>
		     <%= msg %>
		    <% end %>
	    </div>
			<% end %>
		</div> <!-- form-group -->
	</div> <!-- row -->
</div> <!-- container-fluid -->