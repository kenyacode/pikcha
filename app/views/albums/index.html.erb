<!-- share navigation -->


<div class="jumbotron">
  <div class="index">
      <!-- form for rendering all albums -->
      <% current_user.albums.each do |a| %>
      <div>
        <%= link_to a.name, edit_album_path(a) %>
      </div>
      
        <% if @album %>
          <div><%=link_to (image_tag album.photos[0].image.url(:default)), album_path(album) %></div> 
        <% end %>

      <div>
        <%= link_to "Edit this album!", edit_album_path(a) %> 
      </div>  
      <div>
        <%= link_to "Delete this album!", a, method: :delete, data: { confirm: "Are you sure you want to delete this album?"} %>
      </div>  
    <% end %>
  </div> <!-- index album -->
</div> <!-- jumbotron -->